<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="110dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_bg">
    
    <ImageView
        android:id="@+id/item_image_iv"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/item_temp_img"
        android:scaleType="centerCrop"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:text="장소 이름"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_image_iv"
        app:layout_constraintStart_toEndOf="@id/item_image_iv" />
    
    <TextView
        android:id="@+id/item_info_tv"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:text="서울 마포구 하늘공원로 86"
        android:textColor="@color/gray1"
        app:layout_constraintTop_toBottomOf="@id/item_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/item_title_tv" />
    
    <ImageView
        android:id="@+id/item_like_on"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:visibility="visible"
        android:src="@drawable/item_like_on"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

