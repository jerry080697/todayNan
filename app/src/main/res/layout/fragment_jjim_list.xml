<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:id="@+id/logo_small_iv"
        android:src="@drawable/splash_icon3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="16dp"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/jjim_list_back_btn"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toBottomOf="@id/logo_small_iv"
        android:layout_marginTop="6dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#411010"
        android:id="@+id/jjim_list_tv"
        android:text="놀거리 찜목록"
        android:textStyle="bold"
        android:textSize="17dp"
        app:layout_constraintTop_toTopOf="@id/jjim_list_back_btn"
        app:layout_constraintStart_toEndOf="@id/jjim_list_back_btn"
        app:layout_constraintBottom_toBottomOf="@id/jjim_list_back_btn"
        android:layout_marginStart="2dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/jjim_list_rv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        tools:listitem="@layout/item_recommend_2"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jjim_list_tv"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>