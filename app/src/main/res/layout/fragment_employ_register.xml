<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <ImageView
        android:id="@+id/employ_register_back_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/back_arrow"
        app:tint="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/employ_register_tv"
        app:layout_constraintBottom_toBottomOf="@id/employ_register_tv"/>

    <TextView
        android:id="@+id/employ_register_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글 쓰기"
        android:textStyle="bold"
        android:textColor="#411010"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="@drawable/item_location_bg"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/employ_register_tv"
        app:layout_constraintBottom_toBottomOf="@id/employ_register_tv"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/employ_register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록"
            android:textAlignment="center"
            android:textSize="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/item_border"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/employ_register_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:id="@+id/employ_register_title_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="제목"
            android:background="@null"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColorHint="@color/hint"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray0"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/employ_register_title_et"
            app:layout_constraintStart_toStartOf="parent" />
        <EditText
            android:id="@+id/employ_register_content_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="내용"
            android:background="@null"
            android:textSize="15dp"
            android:textColorHint="@color/hint"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/employ_register_title_et"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>