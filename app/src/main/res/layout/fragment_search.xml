<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--검색 요청 전 화면-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_request"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/request_logo_iv"
            android:layout_width="195dp"
            android:layout_height="65dp"
            android:src="@drawable/splash_icon3"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_bar_0"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/request_logo_iv">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/search_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <EditText
                android:id="@+id/request_et"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:hint="원하는 놀거리를 입력해주세요"
                android:background="@null"
                android:textSize="15dp"
                android:textColorHint="@color/hint"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <ImageView
                android:id="@+id/search_image_bt_0"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="15dp"
                android:src="@drawable/search_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/search_pet_bird"
            android:layout_width="210dp"
            android:layout_height="0dp"
            android:src="@drawable/bird"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@id/search_home_bt"
            app:layout_constraintTop_toBottomOf="@id/search_bar_0"
            app:layout_constraintStart_toStartOf="@id/search_bar_0"
            app:layout_constraintEnd_toEndOf="@id/search_bar_0" />
        <ImageView
            android:id="@+id/search_pet_fox"
            android:layout_width="210dp"
            android:layout_height="0dp"
            android:src="@drawable/fox"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@id/search_home_bt"
            app:layout_constraintTop_toBottomOf="@id/search_bar_0"
            app:layout_constraintStart_toStartOf="@id/search_bar_0"
            app:layout_constraintEnd_toEndOf="@id/search_bar_0" />
        <ImageView
            android:id="@+id/search_pet_bear"
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:src="@drawable/bear"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@id/search_home_bt"
            app:layout_constraintTop_toBottomOf="@id/search_bar_0"
            app:layout_constraintStart_toStartOf="@id/search_bar_0"
            app:layout_constraintEnd_toEndOf="@id/search_bar_0" />

        <ImageButton
            android:id="@+id/search_home_bt"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:src="@drawable/search_home_bt"
            android:backgroundTint="@color/transparent"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>