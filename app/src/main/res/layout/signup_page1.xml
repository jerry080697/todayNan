<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="72dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="42dp"
        android:src="@drawable/splash_icon3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="63dp"
        android:layout_height="16dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/signup_text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="273dp"
        android:layout_height="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/signup_text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/signup_ask_1_me"
        android:layout_width="85dp"
        android:layout_height="51dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="167dp"
        android:src="@drawable/nan_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="88dp"
        android:layout_height="21dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="259dp"
        android:src="@drawable/signup_text3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/signup_address_select_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/rectangle"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소 선택"
            android:textColor="#888888"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"/>

    </androidx.cardview.widget.CardView>


    <ImageView
        android:layout_width="138dp"
        android:layout_height="21dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="365dp"
        android:src="@drawable/signup_text4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/signup_play_select_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="391dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/rectangle">
        </ImageView>

        <TextView
            android:id="@+id/signup_play_select_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="놀거리 선택"
            android:textColor="#888888"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/signup_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="645dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="15dp">

        <ImageView
            android:layout_width="107dp"
            android:layout_height="44dp"
            android:src="@drawable/signup_next_btn1">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음으로"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/signup_next_btn_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="645dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="15dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="107dp"
            android:layout_height="44dp"
            android:src="@drawable/letsgo_btn_dark">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음으로"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"/>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/circle_iv"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:src="@drawable/circle_full"
        android:layout_marginTop="700dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:src="@drawable/circle_empty"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/circle_iv"
        app:layout_constraintTop_toTopOf="@id/circle_iv"
        />


</androidx.constraintlayout.widget.ConstraintLayout>